extends layout

block content

  h1 #{title}

  h2 Designer: #{designer.first_name} #{designer.last_name}

  div

    h4 Boats

    dl(class="item-detail-page")
      each boat in boatsDesigned 
        dt
          a(href=boat.url) #{boat.model} 
          | (Manufacturer: #{boat.manufacturer[0].name})

      else
        p This genre has no boats.